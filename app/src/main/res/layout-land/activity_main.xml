<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/negative"
        android:layout_width="364dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/amaranth_bold"
        android:text="Rs. 0"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/coiny"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/positive"
        android:layout_width="364dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/amaranth_bold"
        android:text="Rs. 0"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="98dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/amaranth_bold"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/showall"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/amaranth_bold"
        android:text="Show All"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/showunapproved"
        tools:layout_editor_absoluteY="147dp" />

    <Button
        android:id="@+id/showunapproved"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/amaranth_bold"
        android:text="Show Unapproved"
        android:textColor="#000000"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="147dp" />

    <Button
        android:id="@+id/showunpiad"
        android:layout_width="243dp"
        android:layout_height="51dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/amaranth_bold"
        android:text="Show Unpaid"
        android:textColor="#000000"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="487dp"
        tools:layout_editor_absoluteY="147dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="730dp"
        android:layout_height="198dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showunapproved"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#4CAF50"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/logout"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>